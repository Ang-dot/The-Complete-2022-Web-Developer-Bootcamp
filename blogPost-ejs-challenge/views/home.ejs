<%- include("partials/header"); %>
    <h1>Home</h1>
    <p><%= homeStartingContent %></p> %>
    <form class="mt-3 mb-4" action="/compose">
        <button type="submit" class="btn btn-primary">Compose New Journal</button>
    </form>
    <% posts.forEach((post) => { %>
        <h1><%= post.title %></h1>
        <% if (post.content.length > 100) { %>
            <p><%= post.content.substring(0, 100)%> ...</p>
        <% } 
        else { %> 
            <p><%= post.content %></p>
        <% } %>
        <a href="/posts/<%= post.title %>">Read More</a>
    <% }) %>

<%- include("partials/footer"); %>